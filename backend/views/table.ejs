<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= venue.name %> - Table <%= table.number %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 400px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: <%= venue.brandColor %>;
            margin: 0 auto 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            font-weight: bold;
            color: white;
        }

        .venue-name {
            font-size: 28px;
            font-weight: bold;
            color: white;
            margin-bottom: 5px;
        }

        .table-info {
            color: rgba(255, 255, 255, 0.8);
            font-size: 16px;
        }

        .product-grid {
            display: grid;
            gap: 20px;
            margin-bottom: 30px;
        }

        .product-card {
            background: white;
            border-radius: 16px;
            padding: 24px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease;
        }

        .product-card:hover {
            transform: translateY(-2px);
        }

        .product-icon {
            font-size: 32px;
            margin-bottom: 16px;
        }

        .product-title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 8px;
            color: #1f2937;
        }

        .product-price {
            font-size: 24px;
            font-weight: bold;
            color: <%= venue.brandColor %>;
            margin-bottom: 16px;
        }

        .product-description {
            color: #6b7280;
            margin-bottom: 20px;
            line-height: 1.5;
        }

        .form-group {
            margin-bottom: 16px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #374151;
        }

        .form-input {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.2s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: <%= venue.brandColor %>;
        }

        .quantity-stepper {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .stepper-btn {
            width: 40px;
            height: 40px;
            border: none;
            border-radius: 8px;
            background: <%= venue.brandColor %>;
            color: white;
            font-size: 20px;
            cursor: pointer;
            transition: opacity 0.2s ease;
        }

        .stepper-btn:hover {
            opacity: 0.8;
        }

        .stepper-btn:disabled {
            opacity: 0.4;
            cursor: not-allowed;
        }

        .quantity-display {
            font-size: 20px;
            font-weight: bold;
            min-width: 40px;
            text-align: center;
        }

        .menu-select {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            font-size: 16px;
            background: white;
        }

        .submit-btn {
            width: 100%;
            padding: 16px;
            border: none;
            border-radius: 8px;
            background: <%= venue.brandColor %>;
            color: white;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: opacity 0.2s ease;
        }

        .submit-btn:hover {
            opacity: 0.9;
        }

        .submit-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .loading {
            opacity: 0.6;
            pointer-events: none;
        }

        .error {
            color: #dc2626;
            font-size: 14px;
            margin-top: 8px;
        }

        .success {
            color: #059669;
            font-size: 14px;
            margin-top: 8px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <% if (venue.logoUrl) { %>
                <img src="<%= venue.logoUrl %>" alt="<%= venue.name %>" class="logo">
            <% } else { %>
                <div class="logo"><%= venue.name.charAt(0) %></div>
            <% } %>
            <h1 class="venue-name"><%= venue.name %></h1>
            <p class="table-info">Table <%= table.number %></p>
        </div>

        <div class="product-grid">
            <!-- DJ Song Request -->
            <div class="product-card" id="request-card">
                <div class="product-icon">üéµ</div>
                <h3 class="product-title">DJ Song Request</h3>
                <div class="product-price">‚Ç¨<%= requestPrice %></div>
                <p class="product-description">Request your favorite song from the DJ</p>
                
                <form id="request-form">
                    <div class="form-group">
                        <label class="form-label">Song & Artist</label>
                        <input type="text" class="form-input" id="songText" placeholder="e.g., Bohemian Rhapsody - Queen" maxlength="200">
                    </div>
                    <button type="submit" class="submit-btn" id="request-btn">
                        Request Song
                    </button>
                </form>
            </div>

            <!-- Shots -->
            <div class="product-card" id="shots-card">
                <div class="product-icon">ü•É</div>
                <h3 class="product-title">Shots</h3>
                <div class="product-price">‚Ç¨<%= shotPrice %> each</div>
                <p class="product-description">Order shots for your table</p>
                
                <form id="shots-form">
                    <div class="form-group">
                        <label class="form-label">Quantity</label>
                        <div class="quantity-stepper">
                            <button type="button" class="stepper-btn" id="shots-minus" disabled>-</button>
                            <div class="quantity-display" id="shots-qty">1</div>
                            <button type="button" class="stepper-btn" id="shots-plus">+</button>
                        </div>
                    </div>
                    <button type="submit" class="submit-btn" id="shots-btn">
                        Order Shots
                    </button>
                </form>
            </div>

            <!-- Bottles -->
            <div class="product-card" id="bottle-card">
                <div class="product-icon">üçæ</div>
                <h3 class="product-title">Bottles</h3>
                <p class="product-description">Order bottles from our menu</p>
                
                <form id="bottle-form">
                    <div class="form-group">
                        <label class="form-label">Select Bottle</label>
                        <select class="menu-select" id="bottle-select" required>
                            <option value="">Choose a bottle...</option>
                            <% venue.menuItems.forEach(function(item) { %>
                                <option value="<%= item.id %>" data-price="<%= item.priceCents %>">
                                    <%= item.name %> - ‚Ç¨<%= (item.priceCents / 100).toFixed(2) %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Quantity</label>
                        <div class="quantity-stepper">
                            <button type="button" class="stepper-btn" id="bottle-minus" disabled>-</button>
                            <div class="quantity-display" id="bottle-qty">1</div>
                            <button type="button" class="stepper-btn" id="bottle-plus">+</button>
                        </div>
                    </div>
                    <button type="submit" class="submit-btn" id="bottle-btn">
                        Order Bottle
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Quantity steppers
        function setupStepper(minusBtn, plusBtn, qtyDisplay, min = 1, max = 100) {
            let qty = 1;
            
            minusBtn.addEventListener('click', () => {
                if (qty > min) {
                    qty--;
                    qtyDisplay.textContent = qty;
                    minusBtn.disabled = qty <= min;
                    plusBtn.disabled = qty >= max;
                }
            });
            
            plusBtn.addEventListener('click', () => {
                if (qty < max) {
                    qty++;
                    qtyDisplay.textContent = qty;
                    minusBtn.disabled = qty <= min;
                    plusBtn.disabled = qty >= max;
                }
            });
            
            return () => qty;
        }

        const getShotsQty = setupStepper(
            document.getElementById('shots-minus'),
            document.getElementById('shots-plus'),
            document.getElementById('shots-qty')
        );

        const getBottleQty = setupStepper(
            document.getElementById('bottle-minus'),
            document.getElementById('bottle-plus'),
            document.getElementById('bottle-qty')
        );

        // Form submissions
        async function submitOrder(formData) {
            try {
                const response = await fetch(`/t/<%= table.id %>/checkout`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();
                
                if (result.success) {
                    // Redirect to Stripe Checkout
                    window.location.href = result.url;
                } else {
                    throw new Error(result.error || 'Order failed');
                }
            } catch (error) {
                console.error('Order error:', error);
                alert('Failed to create order: ' + error.message);
            }
        }

        // DJ Request form
        document.getElementById('request-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const songText = document.getElementById('songText').value.trim();
            
            if (!songText) {
                alert('Please enter a song request');
                return;
            }

            const btn = document.getElementById('request-btn');
            btn.disabled = true;
            btn.textContent = 'Processing...';

            await submitOrder({
                productType: 'REQUEST',
                qty: 1,
                songText
            });

            btn.disabled = false;
            btn.textContent = 'Request Song';
        });

        // Shots form
        document.getElementById('shots-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const qty = getShotsQty();
            
            const btn = document.getElementById('shots-btn');
            btn.disabled = true;
            btn.textContent = 'Processing...';

            await submitOrder({
                productType: 'SHOTS',
                qty
            });

            btn.disabled = false;
            btn.textContent = 'Order Shots';
        });

        // Bottle form
        document.getElementById('bottle-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const menuItemId = document.getElementById('bottle-select').value;
            const qty = getBottleQty();
            
            if (!menuItemId) {
                alert('Please select a bottle');
                return;
            }

            const btn = document.getElementById('bottle-btn');
            btn.disabled = true;
            btn.textContent = 'Processing...';

            await submitOrder({
                productType: 'BOTTLE',
                qty,
                menuItemId
            });

            btn.disabled = false;
            btn.textContent = 'Order Bottle';
        });
    </script>
</body>
</html>
