# ========================================
# REQUIRED ENVIRONMENT VARIABLES
# ========================================

# Database (REQUIRED)
DATABASE_URL="postgresql://username:password@localhost:5432/tipsi_db"

# JWT Secret (REQUIRED)
JWT_SECRET=your_super_secret_jwt_key_here

# ========================================
# OPTIONAL ENVIRONMENT VARIABLES
# ========================================

# Node Environment (optional, defaults to development)
NODE_ENV=development

# Server (optional, defaults to 3000)
PORT=3000
BASE_URL=http://localhost:3000

# Stripe Configuration (OPTIONAL - payment features disabled if not set)
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Pricing (optional, defaults shown)
SHOT_PRICE_CENTS=500
DEFAULT_REQUEST_PRICE_CENTS=500
PLATFORM_FEE_CENTS=100

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# File Upload (optional, defaults shown)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ========================================
# NOTES:
# ========================================
# - DATABASE_URL and JWT_SECRET are REQUIRED
# - Stripe keys are OPTIONAL - app will work without payment features
# - All other variables have sensible defaults
